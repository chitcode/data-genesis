<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/cb_mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/cb_tue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cb_mon"
        android:layout_below="@+id/cb_mon"
        android:layout_marginTop="5dp"
        android:text="Tuesday" />

    <CheckBox
        android:id="@+id/cb_wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/cb_tue"
        android:layout_below="@+id/cb_tue"
        android:text="Wednesday" />

    <CheckBox
        android:id="@+id/cb_thur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_alignStart="@+id/cb_wed"
        android:layout_below="@+id/cb_wed"
        android:text="Thursday" />

    <CheckBox
        android:id="@+id/cb_fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_alignStart="@+id/cb_thur"
        android:layout_below="@+id/cb_thur"
        android:text="Friday" />

    <CheckBox
        android:id="@+id/cb_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_alignStart="@+id/cb_fri"
        android:layout_below="@+id/cb_fri"
        android:text="Saturday" />

    <CheckBox
        android:id="@+id/cb_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_alignStart="@+id/cb_sat"
        android:layout_below="@+id/cb_sat"
        android:text="Sunday" />

    <Button
        android:id="@+id/btn_select_day_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="OK"
        android:layout_below="@+id/cb_sun"
        android:layout_alignEnd="@+id/cb_thur" />
    </LinearLayout>
</RelativeLayout>
